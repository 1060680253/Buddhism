<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/segment"
    style="@style/fill_fill">

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/import_text"/>

        <ImageView
            android:id="@+id/iv_user"
            android:layout_toLeftOf="@+id/iv_forward_1"
            android:layout_marginRight="12dp"
            android:layout_height="52dp"
            android:layout_width="52dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_forward_1"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_toLeftOf="@+id/iv_forward_2"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="道英大师兄"/>

        <ImageView
            android:id="@+id/iv_forward_2"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_fa_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="法号"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_toLeftOf="@+id/iv_forward_3"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="道英大师兄"/>

        <ImageView
            android:id="@+id/iv_forward_3"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_app_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="App号"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_app_id"
            android:layout_alignParentRight="true"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="cc123456"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_mobile"
            android:layout_toLeftOf="@+id/iv_forward_5"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="18923789800"/>

        <ImageView
            android:id="@+id/iv_forward_5"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="邮箱"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_toLeftOf="@+id/iv_forward_6"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="10787878@qq.com"/>

        <ImageView
            android:id="@+id/iv_forward_6"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="出生时间"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_birthday"
            android:layout_toLeftOf="@+id/iv_forward_7"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="1993.09.01"/>

        <ImageView
            android:id="@+id/iv_forward_7"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_user_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_intro_key"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:text="个人介绍"
            android:textColor="@color/import_text"/>

        <TextView
            android:id="@+id/tv_user_intro"
            android:layout_toRightOf="@+id/tv_intro_key"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/iv_forward_4"
            android:layout_marginRight="12dp"
            android:textColor="@color/import_text"
            style="@style/wrap_wrap"
            android:text="为了佛，愿抛开一切"/>

        <ImageView
            android:id="@+id/iv_forward_4"
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>