<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/fill_wrap"
    android:background="@color/segment">

    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:scaleType="fitXY"
        android:src="@drawable/fo_bg"/>

    <com.yuanming.buddhism.widget.RoundImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/fojiao"
        android:layout_marginTop="222dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/line_1"
        android:layout_below="@+id/iv_top_bg"
        android:layout_marginTop="34dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/ll_tab"
        android:background="@color/white"
        android:layout_below="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                style="@style/wrap_wrap"
                android:text="文章"
                android:textColor="@color/import_text"/>

            <TextView
                style="@style/wrap_wrap"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textColor="@color/import_text"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                style="@style/wrap_wrap"
                android:text="音频"
                android:textColor="@color/import_text"/>

            <TextView
                style="@style/wrap_wrap"
                android:layout_marginTop="8dp"
                android:text="2"
                android:textColor="@color/import_text"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                style="@style/wrap_wrap"
                android:text="评论"
                android:textColor="@color/import_text"/>

            <TextView
                style="@style/wrap_wrap"
                android:layout_marginTop="8dp"
                android:text="12"
                android:textColor="@color/import_text"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_below="@+id/ll_tab"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
</RelativeLayout>