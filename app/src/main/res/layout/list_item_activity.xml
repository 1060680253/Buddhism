<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_wrap"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">

    <ImageView
        android:id="@+id/iv_activity"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/fojiao" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/wrap_wrap"
        android:layout_toRightOf="@+id/iv_activity"
        android:layout_marginRight="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="园明协会反馈社会佛教仁爱大典学习活动-北京站"
        android:textColor="@color/import_text" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_activity"
        android:layout_width="78dp"
        android:gravity="center"
        android:layout_height="28dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/edittext_background"
        android:text="正在报名"/>


    <TextView
        android:id="@+id/tv_type"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_status"
        android:layout_width="78dp"
        android:gravity="center"
        android:layout_height="28dp"
        android:textColor="@color/cpb_red"
        android:background="@drawable/red_reg_background"
        android:text="技术交流"/>

    <TextView
        android:id="@+id/tv_time"
        style="@style/wrap_wrap"
        android:gravity="bottom"
        android:layout_toRightOf="@+id/iv_activity"
        android:layout_below="@+id/tv_status"
        android:layout_alignBottom="@+id/iv_activity"
        android:text="2016-09-12 12:00"
        android:textColor="@color/secondary_text" />


    <TextView
        android:id="@+id/tv_num"
        style="@style/wrap_wrap"
        android:paddingRight="20dp"
        android:gravity="bottom|right"
        android:layout_toRightOf="@+id/iv_activity"
        android:layout_below="@+id/tv_status"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_activity"
        android:text="1人参与"
        android:textColor="@color/import_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iv_activity"/>
</RelativeLayout>