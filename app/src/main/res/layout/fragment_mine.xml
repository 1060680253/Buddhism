<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attribute="http://schemas.android.com/apk/res-auto"
    style="@style/fill_fill">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/backgroud"
        android:layout_height="match_parent">


        <com.yuanming.buddhism.widget.crescent.CrescentoContainer
            android:id="@+id/crescentoContainer"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:elevation="20dp"
            android:scaleType="centerCrop"
            attribute:curvature="50dp">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fo_bg" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shezhi"/>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btn_qrcode"/>

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:elevation="10dp"
                attribute:cardBackgroundColor="@color/colorPrimary"
                attribute:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvFollowersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="354"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvFollowersCount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-5dp"
                        android:text="Stars"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/riv_user"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/fojiao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                attribute:civ_border_color="#ffffff"
                attribute:civ_border_width="5dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/riv_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="道英大师兄 >"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/tvName"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:text="Developer • Programmer • Designer"-->
                <!--android:textColor="#AAffffff"-->
                <!--android:textSize="13sp"-->
                <!--android:typeface="monospace" />-->


            <LinearLayout
                android:layout_below="@id/tvName"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="1"
                        android:textColor="@color/white"/>

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="功德"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="12"
                        android:textColor="@color/white"/>

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="修行值"
                        android:textColor="@color/white"
                        android:id="@+id/textView" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="1"
                        android:textColor="@color/white"/>

                    <TextView
                        style="@style/wrap_wrap"
                        android:layout_marginTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/riv_user"
                        android:text="等级"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:elevation="10dp"
                attribute:cardBackgroundColor="@color/colorPrimary"
                attribute:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvRepoCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="25"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvRepoCount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-5dp"
                        android:text="Repository"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </com.yuanming.buddhism.widget.crescent.CrescentoContainer>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/ll_collection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/wrap_wrap"
                    android:src="@drawable/make_integral_money" />
                <TextView
                    android:id="@+id/tv_collection"
                    style="@style/wrap_wrap"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/import_text"
                    android:text="收藏"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/backgroud" />
            <LinearLayout
                android:id="@+id/ll_my_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/wrap_wrap"
                    android:src="@drawable/make_integral_money" />
                <TextView
                    style="@style/wrap_wrap"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/import_text"
                    android:text="消息"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_do_thing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:drawableLeft="@drawable/make_integral_money"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:text="我的修行"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:drawableLeft="@drawable/make_integral_money"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:text="我的活动"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_things"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:drawableLeft="@drawable/make_integral_money"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:text="我的动态"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_collection"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:drawableLeft="@drawable/make_integral_money"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_friends"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:drawableLeft="@drawable/make_integral_money"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:text="我的好友"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>