<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_fill">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroud"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#71262A"
        android:padding="16dp">
        <com.yuanming.buddhism.widget.RoundImageView
            android:layout_marginTop="48dp"
            android:id="@+id/riv_user"
            android:layout_centerHorizontal="true"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_1"
            style="@style/wrap_wrap"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/riv_user"
            android:text="道英大师兄 >"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/shezhi"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_qrcode"/>


        <LinearLayout
            android:layout_below="@+id/tv_1"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="1"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="功德"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:background="@color/white" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="12"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="修行值"
                    android:textColor="@color/white"
                    android:id="@+id/textView" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="1"
                    android:textColor="@color/white"/>

                <TextView
                    style="@style/wrap_wrap"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/riv_user"
                    android:text="等级"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/make_integral_money" />
            <TextView
                android:id="@+id/tv_collection"
                style="@style/wrap_wrap"
                android:layout_marginLeft="6dp"
                android:textColor="@color/import_text"
                android:text="收藏"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/backgroud" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/make_integral_money" />
            <TextView
                style="@style/wrap_wrap"
                android:layout_marginLeft="6dp"
                android:textColor="@color/import_text"
                android:text="消息"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:drawableLeft="@drawable/make_integral_money"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:text="我的修行"
            android:textColor="@color/import_text"/>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:drawableLeft="@drawable/make_integral_money"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:text="我的活动"
            android:textColor="@color/import_text"/>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:drawableLeft="@drawable/make_integral_money"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:text="我的动态"
            android:textColor="@color/import_text"/>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:drawableLeft="@drawable/make_integral_money"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:text="我的收藏"
            android:textColor="@color/import_text"/>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white">

        <TextView
            style="@style/wrap_wrap"
            android:drawableLeft="@drawable/make_integral_money"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:text="我的好友"
            android:textColor="@color/import_text"/>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tiaozhuan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>
</ScrollView>