<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attribute="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:elevation="10dp"
        attribute:cardCornerRadius="128dp">

        <com.yuanming.buddhism.widget.waveview.WaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            attribute:above_wave_color="#3f7cf4"
            attribute:blow_wave_color="#73d8ff"
            attribute:progress="80"
            attribute:wave_height="large"
            attribute:wave_hz="normal"
            attribute:wave_length="large" />
        <com.yuanming.buddhism.widget.waveview.BubbleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_total"
        android:layout_marginTop="24dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:elevation="10dp">
        <RelativeLayout
            android:id="@+id/rl_img"
            android:background="@drawable/round_1"
            android:gravity="center"
            style="@style/fill_fill">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/chant_list_title_img_1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_img_2"
            android:visibility="gone"
            android:background="@drawable/round_2"
            android:gravity="center"
            style="@style/fill_fill">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/chant_list_title_img_2" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_img_3"
            android:visibility="gone"
            android:background="@drawable/round_3"
            android:gravity="center"
            style="@style/fill_fill">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/chant_list_title_img_3" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_img_4"
            android:visibility="gone"
            android:background="@drawable/round_2"
            android:gravity="center"
            style="@style/fill_fill">

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/chant_list_title_img_4" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/check_update"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="检查更新"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_update_cant_ignore"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="检查更新 - 不可忽略"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_update_force"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="检查更新 - 强制更新"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_update_silent"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="不提示直接下载新版本"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_update_no_newer"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="检查更新 - 没有新版本"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/clean"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="清除缓存"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</LinearLayout>