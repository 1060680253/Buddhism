<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--android:background="@drawable/complete_state_practice"-->
            <ImageView
                style="@style/fill_fill"
                android:scaleType="fitXY"
                android:src="@drawable/main_item_sjqf" />
            <TextView
                style="@style/wrap_wrap"
                android:ems="1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textSize="22sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/swiperefresh_color2"
                android:text="上师窍诀" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--android:background="@drawable/complete_state_practice"-->
            <ImageView
                style="@style/fill_fill"
                android:scaleType="fitXY"
                android:src="@drawable/main_item_ssjj" />
            <TextView
                style="@style/wrap_wrap"
                android:ems="1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textSize="22sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/swiperefresh_color2"
                android:text="上师教法" />

        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!--android:background="@drawable/complete_state_practice"-->
            <ImageView
                style="@style/fill_fill"
                android:scaleType="fitXY"
                android:src="@drawable/main_item_xyfy" />
            <TextView
                style="@style/wrap_wrap"
                android:ems="1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:textSize="22sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/swiperefresh_color2"
                android:text="彿行事业" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_back_page"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center">

        <ImageView
            style="@style/wrap_wrap"
            android:src="@android:drawable/arrow_up_float" />
    </LinearLayout>

</RelativeLayout>