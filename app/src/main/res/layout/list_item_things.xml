<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_wrap"
    android:background="@color/white"
    android:paddingTop="20dp">

    <com.yuanming.buddhism.widget.RoundImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_user"
        android:layout_marginRight="12dp"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/fojiao"/>

    <LinearLayout
        style="@style/wrap_wrap"
        android:layout_toRightOf="@+id/iv_user"
        android:layout_alignTop="@+id/iv_user"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/iv_user"
        android:orientation="vertical">
        <TextView
            style="@style/wrap_wrap"
            android:text="道英大师兄"
            android:textColor="@color/import_text"/>

        <TextView
            style="@style/wrap_wrap"
            android:text="2016年11月18日12:16"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/wrap_wrap"
        android:text="《心经》可以指摩诃般若波罗蜜多心经，是佛经中字数最少的一部经典著作，因其字数最少、含义最深、传奇最多、影响最大，所以古往今来无数艺术家都倾注极大精力和虔诚之心"
        android:layout_below="@+id/iv_user"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:textColor="@color/import_text"/>

    <ImageView
        android:id="@+id/iv_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/fojiao"/>

    <TextView
        android:layout_below="@+id/iv_content"
        android:layout_marginLeft="20dp"
        style="@style/wrap_wrap"
        android:text="浏览128次"
        android:layout_marginTop="8dp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tv_like"
        android:layout_below="@+id/iv_content"
        android:layout_marginLeft="16dp"
        style="@style/wrap_wrap"
        android:text="赞"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/import_text"/>

    <TextView
        android:layout_toLeftOf="@+id/tv_like"
        android:layout_below="@+id/iv_content"
        android:layout_marginLeft="20dp"
        style="@style/wrap_wrap"
        android:text="分享"
        android:layout_marginTop="8dp"
        android:textColor="@color/import_text"/>

    <View
        android:id="@+id/ll_line"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_like"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ll_line"
        android:layout_marginLeft="20dp"
        style="@style/wrap_wrap"
        android:id="@+id/tv_like_key"
        android:textColor="@color/cpb_red"
        android:text="赞：" />

    <TextView
        android:layout_alignTop="@+id/tv_like_key"
        android:layout_toRightOf="@+id/tv_like_key"
        style="@style/wrap_wrap"
        android:text="小李子、小种子、小张公子"
        android:textColor="@color/import_text"/>


    <TextView
        android:id="@+id/tv_back_key"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_like_key"
        android:layout_marginLeft="20dp"
        style="@style/wrap_wrap"
        android:textColor="@color/cpb_blue_dark"
        android:text="小李子：" />

    <TextView
        android:layout_alignTop="@+id/tv_back_key"
        android:layout_toRightOf="@+id/tv_back_key"
        style="@style/wrap_wrap"
        android:text="心经念得有效不啊？？"
        android:textColor="@color/import_text"/>

    <TextView
        android:id="@+id/tv_back_sen_key"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_back_key"
        android:layout_marginLeft="20dp"
        style="@style/wrap_wrap"
        android:textColor="@color/cpb_blue_dark"
        android:text="小站子：" />

    <TextView
        android:id="@+id/tv_back_value"
        android:layout_alignTop="@+id/tv_back_sen_key"
        android:layout_toRightOf="@+id/tv_back_sen_key"
        android:layout_marginRight="20dp"
        style="@style/wrap_wrap"
        android:text="心经念得非常有效啊，照着上面的学习，很有效"
        android:textColor="@color/import_text"/>

    <View
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_back_value"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/segment"/>
</RelativeLayout>