<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_fill"
    android:background="@color/segment">
    <LinearLayout
        android:orientation="vertical"
        style="@style/fill_wrap">

        <RelativeLayout
            android:id="@+id/rl_mine_msg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="个人信息"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="关于我们"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_clean_memory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="@color/import_text"/>

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="128M"
                android:textColor="@color/import_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="更新版本"
                android:textColor="@color/import_text"/>

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/tiaozhuan"
                android:drawablePadding="12dp"
                android:layout_marginRight="20dp"
                android:text="V1.0"
                android:textColor="@color/import_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="非WIFI是否显示图片"
                android:textColor="@color/import_text"/>

            <CheckBox
                style="@style/wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="非WIFI是否显示音频"
                android:textColor="@color/import_text"/>

            <CheckBox
                style="@style/wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_advise"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="16dp"
            android:background="@color/white">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:text="意见反馈"
                android:textColor="@color/import_text"/>

            <ImageView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/tiaozhuan"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="32dp"
            android:text="退出登录"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/red_background"/>

    </LinearLayout>
</ScrollView>