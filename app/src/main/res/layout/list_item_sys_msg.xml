<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="14dp"
    style="@style/fill_wrap">


    <RelativeLayout
        style="@style/fill_wrap"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="18dp"
        android:background="@drawable/sys_msg_bg">

        <TextView
            style="@style/wrap_wrap"
            android:id="@+id/tv_title"
            android:textColor="@color/import_text"
            android:text="掌中佛管家有消息啦"/>

        <TextView
            style="@style/wrap_wrap"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="8dp"
            android:textColor="#bbbbbb"
            android:text="2016-08-09 11:09:09"/>

        <TextView
            style="@style/wrap_wrap"
            android:id="@+id/tv_fans"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="23dp"
            android:text="亲爱的佛友:"
            android:textColor="@color/normal_text"/>

        <TextView
            style="@style/wrap_wrap"
            android:id="@+id/tv_content"
            android:layout_below="@+id/tv_fans"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="8dp"
            android:textColor="@color/import_text"
            android:text="掌中佛提醒你该修行啦！！,你的心经需要今天在读三遍，才可以功德无量额！！！"/>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="18dp"
            android:layout_height="1px"
            android:background="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_detail"
            android:layout_below="@+id/line"
            android:text="查看详情"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>
</LinearLayout>