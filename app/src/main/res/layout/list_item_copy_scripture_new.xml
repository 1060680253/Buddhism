<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/transparent"
    style="@style/fill_wrap">

    <LinearLayout
        android:id="@+id/ll_key"
        android:layout_marginTop="12dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        style="@style/fill_wrap">

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />

        <TextView
            android:id="@+id/tv_key_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />

        <TextView
            android:id="@+id/tv_key_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />

        <TextView
            android:id="@+id/tv_key_3"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />

        <TextView
            android:id="@+id/tv_key_4"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />

        <TextView
            android:id="@+id/tv_key_5"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/import_text"
            android:textSize="32sp"
            android:maxEms="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_value"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ll_key"
        android:weightSum="6"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        style="@style/fill_wrap">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value_1"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value_2"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value_3"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value_4"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et_value_5"
                android:maxEms="1"
                android:maxLength="1"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/import_text"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:background="@drawable/write_book_every_table_bg" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>