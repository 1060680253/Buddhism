<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="20dp"
    style="@style/fill_wrap">

    <TextView
        android:id="@+id/tv_detail"
        android:layout_toRightOf="@+id/iv_detail"
        style="@style/wrap_wrap"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/import_text"
        android:text="《心经》可以指摩诃般若波罗蜜多心经，是佛经中字数最少的一部经典著作，因其字数最少、含义最深、传奇最多、影响最大，所以古往今来无数艺术家都倾注极大精力和虔诚之心"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_detail"
        android:layout_width="68dp"
        android:scaleType="fitXY"
        android:layout_height="68dp"
        android:src="@drawable/fojiao" />


    <TextView
        android:id="@+id/tv_type"
        style="@style/wrap_wrap"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tv_detail"
        android:layout_alignParentRight="true"
        android:text="心经在线"
        android:layout_gravity="right"
        android:textColor="@color/cpb_red"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_alignTop="@+id/tv_type"
        android:layout_toLeftOf="@+id/iv_detail"
        style="@style/wrap_wrap"
        android:layout_marginLeft="20dp"
        android:text="2016.08.08"
        android:textColor="@color/secondary_text"
        android:layout_marginRight="20dp"/>


    <View
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <TextView
        android:id="@+id/delete"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="删除"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/cpb_red"
        android:layout_height="24dp"/>
</RelativeLayout>