<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="roundedImageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="CirclePagerIndicator">
        <attr name="circle_indicator_centerHorizontal" format="boolean" />
        <attr name="circle_indicator_follow" format="boolean" />
        <attr name="circle_indicator_orientation" format="reference" />
        <attr name="circle_indicator_color" format="color" />
        <attr name="circle_indicator_stroke_color" format="color" />
        <attr name="circle_indicator_stroke_width" format="dimension" />
        <attr name="circle_indicator_fill_color" format="color" />
        <attr name="circle_indicator_radius" format="dimension" />
        <attr name="circle_indicator_space" format="dimension" />
        <attr name="circle_indicator_indicator_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CrescentoImageView">
        <attr name="curvature" format="dimension"/>
        <attr name="tintMode" format="integer">
            <flag name="automatic" value="0"/>
            <flag name="manual" value="1"/>
        </attr>
        <attr name="tintColor" format="color"/>
        <attr name="tintAlpha" format="integer"/>
    </declare-styleable>

    <declare-styleable name="en_search">
        <attr name="search_line_color" format="color" />
        <attr name="search_line_width" format="integer" />
        <attr name="search_dot_size" format="integer" />
    </declare-styleable>
    <declare-styleable name="SwitcherView">
        <attr format="reference|color" name="switcherTextColor"/>
        <attr format="dimension" name="switcherTextSize"/>
        <attr format="integer" name="switcherRollingTime"/>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="above_wave_color" format="color"/>
        <attr name="blow_wave_color" format="color"/>
        <attr name="progress" format="integer"/>
        <attr name="wave_length" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="slow" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>

</resources>